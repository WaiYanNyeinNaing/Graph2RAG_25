# Bosch Graph2RAG Configuration Template
# Copy this file to .env and fill in your API keys

###########################
### Server Configuration
###########################
HOST=0.0.0.0
PORT=9621
WEBUI_TITLE='Bosch Graph2RAG'
WEBUI_DESCRIPTION='Bosch Knowledge Graph RAG System'

### Directory Configuration
WORKING_DIR=./rag_storage
INPUT_DIR=./inputs

### Logging level
LOG_LEVEL=INFO
VERBOSE=False

########################
### Query Configuration
########################
ENABLE_LLM_CACHE=true
COSINE_THRESHOLD=0.2
TOP_K=60
CHUNK_TOP_K=10
MAX_ENTITY_TOKENS=10000
MAX_RELATION_TOKENS=10000
MAX_TOTAL_TOKENS=32000

########################################
### Document processing configuration
########################################
SUMMARY_LANGUAGE=English
ENABLE_LLM_CACHE_FOR_EXTRACT=true
CHUNK_SIZE=1200
CHUNK_OVERLAP_SIZE=100
MAX_TOKENS=32000
MAX_GLEANING=1

###############################
### Concurrency Configuration
###############################
MAX_ASYNC=4
MAX_PARALLEL_INSERT=2
EMBEDDING_FUNC_MAX_ASYNC=16
EMBEDDING_BATCH_NUM=32

#######################
### LLM Configuration
#######################
TIMEOUT=240
TEMPERATURE=0.7

### OPTION 1: Azure OpenAI Configuration
LLM_BINDING=azure_openai
LLM_MODEL=gpt-4
LLM_BINDING_HOST=https://YOUR-AZURE-ENDPOINT.cognitiveservices.azure.com/
LLM_BINDING_API_KEY=YOUR-AZURE-API-KEY
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=YOUR-DEPLOYMENT-NAME

### OPTION 2: Ollama Configuration (Local)
# LLM_BINDING=ollama
# LLM_MODEL=qwen2:latest
# LLM_BINDING_HOST=http://localhost:11434
# LLM_BINDING_API_KEY=

####################################################################################
### Embedding Configuration
####################################################################################

### OPTION 1: Azure OpenAI Embedding
EMBEDDING_BINDING=azure_openai
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIM=3072
EMBEDDING_BINDING_HOST=https://YOUR-EMBEDDING-ENDPOINT.openai.azure.com/
EMBEDDING_BINDING_API_KEY=YOUR-EMBEDDING-API-KEY
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_EMBEDDING_API_VERSION=2024-02-01

### OPTION 2: Ollama Embedding (Local)
# EMBEDDING_BINDING=ollama
