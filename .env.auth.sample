# Bosch Graph2RAG Authentication Configuration
# Copy this to .env.auth and configure your settings

###########################
### Server Configuration
###########################
HOST=0.0.0.0
PORT=9621
WEBUI_TITLE='Bosch Graph2RAG - Secure'
WEBUI_DESCRIPTION='Bosch Knowledge Graph RAG System with User Authentication'

###########################
### Authentication Settings
###########################
# Enable authentication (set to true for user-based access)
ENABLE_USER_AUTH=true

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
TOKEN_SECRET=your-super-secret-jwt-key-change-this

# Token expiration (hours)
TOKEN_EXPIRE_HOURS=48
GUEST_TOKEN_EXPIRE_HOURS=24

# JWT Algorithm
JWT_ALGORITHM=HS256

# Initial user accounts (format: username:password,username2:password2)
# You can also use email format: user@bosch.com:password
AUTH_ACCOUNTS=admin:admin123,demo:demo123

# API Key (optional - for API-only access without user auth)
LIGHTRAG_API_KEY=

###########################
### User Storage
###########################
# Where to store user data
USERS_FILE=./users.json

# Base directories (user workspaces will be created as subdirectories)
WORKING_DIR=./rag_storage
INPUT_DIR=./inputs

###########################
### LLM Configuration (Azure)
###########################
LLM_BINDING=azure_openai
LLM_MODEL=gpt-4
LLM_BINDING_HOST=https://YOUR-AZURE-ENDPOINT.cognitiveservices.azure.com/
LLM_BINDING_API_KEY=YOUR-AZURE-API-KEY
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=YOUR-DEPLOYMENT-NAME

###########################
### Embedding Configuration
###########################
EMBEDDING_BINDING=azure_openai
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIM=3072
EMBEDDING_BINDING_HOST=https://YOUR-EMBEDDING-ENDPOINT.openai.azure.com/
EMBEDDING_BINDING_API_KEY=YOUR-EMBEDDING-API-KEY
AZURE_EMBEDDING_DEPLOYMENT=text-embedding-3-large
AZURE_EMBEDDING_API_VERSION=2024-02-01

###########################
### Processing Settings
###########################
CHUNK_SIZE=1200
CHUNK_OVERLAP_SIZE=100
MAX_TOKENS=32000
TEMPERATURE=0.7
TIMEOUT=240

###########################
### Storage Configuration
###########################
LIGHTRAG_KV_STORAGE=JsonKVStorage
LIGHTRAG_DOC_STATUS_STORAGE=JsonDocStatusStorage
LIGHTRAG_GRAPH_STORAGE=NetworkXStorage
LIGHTRAG_VECTOR_STORAGE=NanoVectorDBStorage